{
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "node",
            "vitest/globals"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "src",
        "paths": {
            "@helpers/*": [
                "helpers/*"
            ],
            "@helpers*": [
                "helpers"
            ],
            "types/*": [
                "types/*"
            ],
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}